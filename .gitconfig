[core]
    excludesFile = /Users/pascal/.gitignore_global
    autocrlf = input

[push]
    default = simple
    followTags = true

[commit]
    gpgsign = true

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    tool = vimdiff

[status]
    showStash = true
    showUntrackedFiles = all

# Work related overwrites
[include]
    path = ~/.gitconfig_work
